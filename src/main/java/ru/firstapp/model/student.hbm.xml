<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping><class name="ru.firstapp.model.Student" table="student">
    <id name="id" type="java.lang.Long">
        <column name="ID" />
        <generator class="native"/>
    </id>
    <many-to-one name="person" class="ru.firstapp.model.Person" fetch="select">
        <column name="PERSON_ID" not-null="true" unique="true"/>
    </many-to-one>
    <many-to-one name="recordBook" class="ru.firstapp.model.RecordBook" fetch="select">
        <column name="RECORD_BOOK_ID" not-null="false"/>
    </many-to-one>
    <property name="group" type="string">
        <column name="GROUP_NUMBER"/>
    </property>
</class>
</hibernate-mapping>
